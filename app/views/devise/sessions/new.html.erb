<main class="devise-page mt-8">
  <%= image_tag "logos/long-pink.svg", class: "devise-page-logo" %>

  <h1 class="devise-page-heading"><%= t ".title" %></h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
                      placeholder: t(".placeholders.email"),
                      class: "devise-page-text-input mb-2" %>

    <%= f.password_field :password, autocomplete: "off",
                         placeholder: t(".placeholders.password"),
                         class: "devise-page-text-input mb-3" %>

    <div class="custom-control custom-checkbox mb-4">
      <%= f.check_box :remember_me, class: "custom-control-input" %>
      <%= f.label :remember_me, t(".remember_me"), class: "custom-control-label" %>
    </div>

    <%= f.submit t(".login"),
                 class: "btn btn-primary btn-lg btn-block text-uppercase h4" %>
  <% end %>

  <div class="mt-3">
    <%= link_to(
      t("devise.shared.links.forgot_password"),
      new_password_path(resource_name),
      class: "h5 font-weight-normal text-brand"
    ) %>
    <br>
    <%= link_to t("devise.shared.links.no_confirmation_instructions"),
                new_confirmation_path(resource_name),
                class: "h5 font-weight-normal text-brand" %>
    <p class="h5 font-weight-light mt-2"><%= t "devise.shared.links.need_account" %></p>

    <%= link_to t("devise.shared.links.register"), new_registration_path(resource_name),
                class: "btn btn-secondary btn-lg btn-block text-uppercase h4" %>
  </div>
</main>

<% if flash[:alert].present? %>
  <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
    <p><%= flash[:alert] %></p>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<% if flash[:notice].present? %>
  <div class="alert alert-helpful alert-dismissible fade show mt-3" role="alert">
    <p><%= flash[:notice] %></p>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
