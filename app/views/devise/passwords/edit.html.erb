<main class="devise-page mt-8">
  <%= image_tag "logos/long-pink.svg", class: "devise-page-logo" %>

  <h1 class="devise-page-heading"><%= t ".title" %></h1>

  <%= form_for(
        resource,
        as: resource_name,
        url: password_path(resource_name),
        html: { method: :put }
  ) do |f| %>

    <%= f.hidden_field :reset_password_token %>

    <%= f.password_field :password, autofocus: true, autocomplete: "off",
                      placeholder: t(".placeholders.password"),
                      class: "devise-page-text-input mb-2" %>

    <%= f.password_field :password_confirmation, autocomplete: "off",
                         placeholder: t(".placeholders.confirm_password"),
                         class: "devise-page-text-input mb-4" %>

    <%= f.submit t(".save"),
                 class: "btn btn-primary btn-lg btn-block text-uppercase h4" %>
  <% end %>

  <div class="mt-3">
    <p class="h5 font-weight-light mt-2">
      <%= t ".no_change" %>
    </p>

    <%= link_to(
      t("devise.shared.links.login"),
      new_session_path(resource_name),
      class: "btn btn-secondary btn-lg btn-block text-uppercase h4"
    )%>
  </div>
</main>

<% if resource.errors.full_messages.present? %>
  <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <% resource.errors.full_messages.each do |error| %>
      <p class="mb-0 small text-white">
        <%= error %>
      </p>
    <% end %>
  </div>
<% end %>
