<main class="devise-page mt-8">
  <%= image_tag "logos/long-pink.svg", class: "devise-page-logo" %>

  <h1 class="devise-page-heading"><%= t ".title" %></h1>

  <%= form_for(
        resource,
        as: resource_name,
        url: password_path(resource_name),
        html: { method: :post }
  ) do |f| %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
                      placeholder: t("placeholders.email"),
                      class: "devise-page-text-input mb-4" %>

    <%= f.submit t(".send_instructions"),
                 class: "btn btn-primary btn-lg btn-block text-uppercase h4" %>
  <% end %>

  <div class="mt-3">
    <%= link_to(
      t("devise.shared.links.no_confirmation_instructions"),
      new_confirmation_path(resource_name),
      class: "h5 font-weight-normal text-brand"
    ) %>
    <br>
    <%= link_to t("devise.shared.links.login"),
                new_session_path(resource_name),
                class: "h5 font-weight-normal text-brand" %>
    <p class="h5 font-weight-light mt-2"><%= t "devise.shared.links.need_account" %></p>

    <%= link_to(
      t("devise.shared.links.register"),
      new_registration_path(resource_name),
      class: "btn btn-secondary btn-lg btn-block text-uppercase h4"
    ) %>
  </div>
</main>

<% if resource.errors.full_messages.present? %>
  <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <% resource.errors.full_messages.each do |error| %>
      <p class="mb-0 small text-white">
        <%= error %>
      </p>
    <% end %>
  </div>
<% end %>
